html
  head
    title Quiz
    link(href='css/materialize.min.css' type="text/css" rel="stylesheet")
    link(href="css/slickQuiz.css" rel="stylesheet" type="text/css")
    link(href="css/quiz.css" rel="stylesheet" type="text/css")
    link(href="css/quizCustom.css" rel="stylesheet" type="text/css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
  body#slickQuiz
    ul#dropdown1.dropdown-content
      li
        a(href='/settings') Account
      li
        a(href='/password') Password
    nav
      div.nav-wrapper
        a#logo.brand-logo(href="#") LangGa
        a.button-collapse(href="#" data-activates="mobile-demo")
          i.material-icons#hamburger menu
        ul.right.hide-on-med-and-down#nav-mobile
          li
            a(href='/profile')= user.userName
          li
            a.dropdown-button(href='#' data-activates='dropdown1') Settings
          li
            a#logoutButton.waves-effect.waves-light.btn-large.z-depth-0(href='/logout') Logout
        ul.side-nav#mobile-demo
          li
            a(href='/profile')= user.userName
          ul.collapsible(data-collapsible='accordion')
            li 
              div.collapsible-header 
                a Settings
              div.collapsible-body
                a(href='/settings') Account
                a(href='/password') Password
          li
            a(href='/logout') Logout

    div.row
      div.col.s12.m12.l3
        div.card
          div.card-content
            img.image(src="images/duck.jpg")
            h3#Quiz Quiz
            div#topscore
              h5 Theme: #{score.theme}
              - if(score.language == "NL")
                h5 Language: Dutch
              - else if(score.language == "ES")
                h5 Language: Spanish
              - else if(score.language == "FR")
                h5 Language: French
              h5 Top Score: #{score.score}
            p Try to answer as many of the questions. The more you answer correct, the more points you get! 

      div.col.s12.m12.l9
        div.card
          div.card-content
            div.quizContent
              h1.quizName
              div.quizArea
                div.quizHeader
                  a.button.startQuiz(href="#") Get Started!
              div.quizResults
                h3.quizScore You Scored: &nbsp;
                  span#score
                h3.quizLevel Ranking: &nbsp;
                  span
                h3.quizResultsCopy
    script(src="js/jquery-3.1.1.min.js")
    script(src='/js/materialize.min.js')
    script(src="js/slickQuiz.js")
    script(src="js/slickQuiz-config.js")
    script(src="js/quiz.js")
    script(src="js/custom.js")