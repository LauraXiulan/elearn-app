html
	head
		title Memory
		link(rel="stylesheet" type="text/css" href="css/materialize.min.css")
		link(rel="stylesheet" type="text/css" href="css/memorygame.css")
		link(rel="stylesheet" type="text/css" href="css/memory.css")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
	body.dutch-memory
		nav
			div.nav-wrapper
				a#logo.brand-logo LangGa
				a.button-collapse(href="#" data-activates="mobile-demo")
					i.material-icons#hamburger menu
				ul.right.hide-on-med-and-down#nav-mobile
					li
						a(href='/profile')= user.userName
					li
						a(href='/settings') Settings
					li
						a#logoutButton.waves-effect.waves-light.btn-large.z-depth-0(href='/logout') Logout
				ul.side-nav#mobile-demo
					li
						a(href='/profile')= user.userName
					li 
						a(href='/settings') Settings
					li
						a(href='/logout') Logout
		div.row
			div.col.s3
				div.card
					div.card-content
						img.image(src="images/duck.jpg")
						h3#Memory Memory
						div#topscore
							h5 Theme: Family
							h5 Language: Dutch
							h5 Top Score: #{score.score}
						p Match the right picture with the word. The faster you are, and the less tries you use, the better your score. A lower score means a better game!
			div.col.s9
				div.col.s10.offset-s1
					div.card
						div.card-content
							div#my-memorygame.quizy-memorygame
