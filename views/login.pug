html
	head 
		title Login
		link(href='/css/materialize.min.css' type="text/css" rel="stylesheet")
		link(href='/css/login.css' type="text/css" rel="stylesheet")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		script(src='/js/jquery-3.1.1.min.js')
		script(src='/js/materialize.min.js')
		script(src='/js/custom.js')
	body
		nav.z-depth-0
			div.nav-wrapper
				a#logo.brand-logo eLearning 
				a.button-collapse(href="#" data-activates="mobile-demo")
					i.material-icons#hamburger menu
				ul.right.hide-on-med-and-down
					li
						a#loginButton.waves-effect.waves-light.btn-large.z-depth-0(href='#modal1') Login
				ul.side-nav#mobile-demo
					li
						a#loginButton(href='#modal1') Login

		div#modal1.modal
			div.modal-content
				h2.modaltext Login on profile
				br
				h2#error-message= message
				form#loginForm(action='/loginProfile' method='post')
					div.input-field
						input#email2(type="text" name='email' required)
						label(for='email2') Enter email
					div.input-field
						input#password2(type='password' name='password' required)
						label(for='password2') Enter password
					input#submitLogin(type='submit' class='btn btn-default btn-large' value='login')
							

		main
			div.container
				div.row
					div.col.l10.offset-l1
						div.section1 
							h1 Welcome to the eLearning App
							h4 Let children learn Dutch, Spanish or French while having fun
						div.section2
							div.col.l4
								img.language.circle(src='/images/flag_dutch.png')
							div.col.l4
								img.language.circle(src='/images/flag_spain.png')
							div.col.l4
								img.language.circle(src='/images/flag_france.png')
				div.section3
					a#createButton.waves-effect.waves-light.btn-large.z-depth-0(href='#modal2') Create new profile

		div#modal2.modal
			div.modal-content
				h2.modaltext Create profile
				br
				h2#error-message= message
				form(action='/' method='post')
					div.input-field
						input#fullName(type="text" name='fullName' required)
						label(for='fullName') Enter full name
					div.input-field
						input#userName(type='text' name='userName' required)
						label(for='userName') Enter username
					div.input-field
						input#email(type="text" name='email' required)
						label(for='email') Enter email
					div.input-field
						input#password(type='password' name='password' required)
						label(for='password') Enter password
					div.input-field
						input#conPassword(type="password" name='conPassword' required)
						label(for='conPassword') Confirm password
					input(type='submit' class='btn btn-default btn-large' value='Submit')


						
		

